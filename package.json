{
  "name": "ssr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "22.13.0",
    "pnpm": "^10"
  },
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "rm -rf dist/ && run-p build:*",
    "build:client": "tsc -b && vite build --outDir dist/client",
    "build:server": "tsc -b && vite build -c vite.ssr.config.ts --outDir dist/server --ssr src/entry-server.tsx",
    "prod": "NODE_ENV=production tsx server.ts",
    "lint": "eslint src",
    "prettier:write": "prettier -w .",
    "prettier:check": "prettier -c .",
    "types": "tsc --project tsconfig.app.json --noEmit",
    "prepare": "git config --local core.hooksPath .githooks || echo 'An error occurred while installing the git hooks configuration'"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.66.5",
    "compression": "^1.8.0",
    "eslint-plugin-react": "^7.37.4",
    "express": "^4.21.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.5",
    "serialize-javascript": "^6.0.2",
    "tailwindcss": "^4.0.6",
    "vite-plugin-mkcert": "^1.17.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@tanstack/eslint-plugin-query": "^5.66.1",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/serialize-javascript": "^5.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.20.1",
    "eslint-import-resolver-typescript": "^3.8.1",
    "eslint-import-resolver-vite": "^2.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-sonarjs": "^3.0.2",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.0.8",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-static-copy": "^2.2.0"
  }
}
