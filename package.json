{
  "name": "ssr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "22.13.0",
    "pnpm": "^10"
  },
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "rm -rf dist/ && run-p build:*",
    "build:client": "tsc -b && vite build --outDir dist/client",
    "build:server": "tsc -b && vite build -c vite.ssr.config.ts --outDir dist/server --ssr src/entry-server.tsx",
    "prod": "NODE_ENV=production tsx server.ts",
    "lint": "eslint src",
    "prettier:write": "prettier -w .",
    "prettier:check": "prettier -c .",
    "types": "tsc --project tsconfig.app.json --noEmit",
    "prepare": "git config --local core.hooksPath .githooks || echo 'An error occurred while installing the git hooks configuration'"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@tanstack/react-query": "^5.64.2",
    "compression": "^1.7.5",
    "eslint-plugin-react": "^7.37.4",
    "express": "^4.21.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.3",
    "tailwindcss": "^4.0.0",
    "vite-plugin-mkcert": "^1.17.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-import-resolver-vite": "^2.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-sonarjs": "^3.0.1",
    "globals": "^15.14.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-static-copy": "^2.2.0"
  }
}
